{
  "name": "icafesup",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["server", "web"],
  "scripts": {
    "build": "npm run build -w server && npm run build -w web",
    "lint": "eslint \"{server,web}/src/**/*.{ts,tsx}\"",
    "format": "prettier -w \"{server,web}/src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": ["prettier -w", "eslint --fix"]
  }
}
